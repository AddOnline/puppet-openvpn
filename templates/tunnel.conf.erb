# File Managed by Puppet

# Openvpn mode: <%= mode %>
<% if mode == "server" -%>
server <%= server %>
<% end -%>
<% if mode == "client" -%>
client
remote <%= remote %>
pull
resolv-retry infinite
nobind
<% end -%>

# Network settings
port <%= port %>
proto <%= real_proto %>
dev <%= dev %>
route <%= route %>

# Authentication: <%= auth_type %>
<% if auth_type == "key" -%>
secret <%= scope.lookupvar("openvpn::config_dir") %>/<%= name %>.key 
<% end -%>

<% if auth_type == "tls-server" -%>
ca keys/ca.crt
<% if mode == "server" -%>
tls-server
cert keys/<%= hostname %>.crt
key keys/<%= hostname %>.key
dh keys/dh1024.pem
<% end -%>

<% if mode == "client" -%>
cert keys/<%= hostname %>.crt
key keys/<%= hostname %>.key
tls-client
<% end -%>

<% end -%>

# General settings
keepalive 10 60
inactive 600
user <%= scope.lookupvar("openvpn::process_user") %>
group <%= scope.lookupvar("openvpn::process_user") %>

persist-tun
persist-key
verb 4 # From 0 to 15 (max)


